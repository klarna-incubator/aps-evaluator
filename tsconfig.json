{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "generated/config.d.ts"]
}
